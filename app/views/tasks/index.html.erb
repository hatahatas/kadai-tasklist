<% if logged_in? %>
    <h1>タスク一覧</h1>
        <p>ログイン完了ユーザ:
<%= current_user.name %>
        </p>

    <ul>
    
<% @tasks.each do |task| %>

        <li>
<%= task.id %>
<%= task.content %>

<%= task.status %>
        </li>
        <li>
<%= link_to "Edit", edit_task_path(task),class: 'btn btn-danger btn-xs' %>
<%= link_to "Delete",task, method: :delete, data: {confirm:"You sure?"}, class: 'btn btn-danger btn-xs' %>
        </li>
    
<% end %>
    </ul>

<%= paginate @tasks %>



<% else %>
    <div class="center jumbotron">
        <div class="text-center">
<%= link_to 'Signup',signup_path ,class: 'btn btn-lg btn-primary' %>
        </div>
    </div>


<% end %>